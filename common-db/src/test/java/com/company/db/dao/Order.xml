<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.db.dao">
    <resultMap id="orderEO" type="OrderEO">
        <result property="id" column="ID"/>
        <result property="name" column="NAME"/>
        <result property="userId" column="USER_ID"/>
    </resultMap>
    <sql id="Base_Column_List">
        ID,
        NAME,
        user_id
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" keyColumn="GENERATED_KEY" parameterType="OrderEO">
        INSERT INTO t_order (name, user_id) VALUE (#{name}, #{userId})
        <!--<selectKey keyProperty="id" resultType="java.lang.Long" order="AFTER">-->
            <!--SELECT LAST_INSERT_ID()-->
        <!--</selectKey>-->
    </insert>

    <select id="get" parameterType="java.lang.Long" resultMap="orderEO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_order
        WHERE ID = #{id}
    </select>
</mapper>
