<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- ==================== -->
    <!--         属性          -->
    <!-- ==================== -->
    <property name="PROJECT_NAME" value="demo-api"/>
    <property name="LOG_HOME" value="/xdfapp/logs/${PROJECT_NAME}"/>
    <!-- ==================== -->
    <!--        控制台         -->
    <!-- ==================== -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] [%level] [%class:%line] [%X{id}] - %m%n</pattern>
        </encoder>
    </appender>
    <!-- ==================== -->
    <!--      FILE_DEBUG      -->
    <!-- ==================== -->
    <appender name="FILE_DEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/web-debug.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] [%level] [%class:%line] [%X{id}] - %m%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>DEBUG</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/web-debug.log.%d{yyyy-MM-dd}</fileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
    </appender>
    <!-- ==================== -->
    <!--      FILE_COST      -->
    <!-- ==================== -->
    <appender name="FILE_COST" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/web-cost.log</file>
        <encoder>
            <pattern>%m%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/web-debug.log.%d{yyyy-MM-dd}</fileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
    </appender>

    <logger name="COST_LOGGER" level="INFO" additivity="false">
        <appender-ref ref="FILE_COST"/>
    </logger>

    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE_DEBUG"/>
    </root>
</configuration>